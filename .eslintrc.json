{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {
    "no-console": "off",
    "radix": "off",
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": false,
        "printWidth": 80
      }
    ]
  },
  "ignorePatterns": [
    "**/migrations/*",
    "build/**"
  ]
}